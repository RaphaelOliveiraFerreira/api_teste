
<Historico>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: r"C:\Users\raphael.ferreira\Desktop\Python\.venv\Projeto app\icones\salesman.png"
                id: foto_historico
        ScrollView:
            pos_hint: {"left": 1, "bottom": 0.75}  # Posiciona o botão no canto inferior esquerdo
            size_hint: 1, 0.63
            GridLayout:
                cols:1
                id: lista_historico
                name: lista_historico
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
        Label:
            text: "Seu histórico do sucesso rumo ao 5km sub 20!"
            size_hint: None, None  # Define tamanho fixo se necessário
            size: 200, 50  # Tamanho fixo para o Label
            pos_hint: {"center_x": 0.5, "center_y": 0.8}  # Centraliza o Label na parte superior
            name: label_hitorico
            id: label_hitorico

        Button:
            pos_hint: {"left": 0.2, "bottom": 0.2}  # Posiciona o botão no canto inferior esquerdo
            size_hint: 0.2, 0.12  # Define o tamanho do botão (20% da largura e 12% da altura)
            background_normal: r"C:\Users\raphael.ferreira\Desktop\Python\.venv\Projeto app\icones\voltar.png"
            background_down: r"C:\Users\raphael.ferreira\Desktop\Python\.venv\Projeto app\icones\voltar_pressed.png"
            on_release:
                app.mudar_tela("homepage")

