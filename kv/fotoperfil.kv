<Fotoperfil>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: r"C:\Users\raphael.ferreira\Desktop\Python\.venv\Projeto app\icones\bg1.png"

        ScrollView:
            pos_hint: {"left": 0.9, "bottom": 0.85}  # Posiciona o botão no canto inferior esquerdo
            size_hint: 0.95, 0.75
            
            GridLayout:
                cols: 3
                id: lista_foto
                name: lista_foto

                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

        Label:
            text: "Escolha sua nova imagem de perfil!"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}  # Centraliza o Label
            size_hint: 0.7, 0.1
            id: label_fotoperfil

        Button:
            pos_hint: {"left": 0.2, "bottom": 0.2}  # Posiciona o botão no canto inferior esquerdo
            size_hint: 0.12, 0.12  # Define o tamanho do botão
            background_normal: r"C:\Users\raphael.ferreira\Desktop\Python\.venv\Projeto app\icones\voltar.png"
            background_down: r"C:\Users\raphael.ferreira\Desktop\Python\.venv\Projeto app\icones\voltar_pressed.png"
            on_release:
                app.mudar_tela("configuracoes")
